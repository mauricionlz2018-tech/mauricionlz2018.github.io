---
interface Props {
  name: string;
  percent: number;
}

const { name, percent } = Astro.props;
---

<div class="w-full bg-zinc-800 rounded-lg overflow-hidden">
  <div class="flex items-center justify-between px-4 py-2">
    <span class="text-sm font-medium">{name}</span>
    <span class="text-sm font-medium text-zinc-400">{percent}%</span>
  </div>

  <div class="h-2 w-full bg-zinc-700">
    <div
      class="h-2 rounded-full bg-red-500 transition-all duration-700 ease-out"
      style={`width: ${percent}%;`}
    ></div>
  </div>
</div>
