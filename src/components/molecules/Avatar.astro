---
interface Props {
  src: string;
  alt?: string;
  size?: string;
}

const { src, alt = "Avatar", size = "w-40 h-40" } = Astro.props;
---

<div class="relative flex items-center justify-center">
  <div class="absolute inset-0 blur-2xl rounded-full bg-purple-500/20 animate-pulse"></div>
  <img
    src={src}
    alt={alt}
    class={`relative z-10 rounded-full object-cover border-2 border-purple-400/30 shadow-xl ${size}`}
  />
</div>
