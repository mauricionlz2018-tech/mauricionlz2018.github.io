---
interface Props {
  icon: string;
  link: string;
}

const { icon, link } = Astro.props;

const base = import.meta.env.BASE_URL;

const iconPaths: Record<string, string> = {
  whatsapp: base + "assets/Icons/Whatsapp.png",
  instagram: base + "assets/Icons/Instagram.png",
  tiktok: base + "assets/Icons/Tiktok.png",
  github: base + "assets/Icons/Github.png",
  facebook: base + "assets/Icons/Facebook.png",
};
---
<a href={link} target="_blank" rel="noopener noreferrer">
  <img src={iconPaths[icon]} width="25" height="25" alt={icon} />
</a>
