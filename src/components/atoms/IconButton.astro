---
interface Props {
  icon: string;
  link: string;
}

const { icon, link } = Astro.props;
const base = import.meta.env.BASE_URL;

const iconPaths: Record<string, string> = {
  whatsapp: `${base}Icons/Whatsapp.png`,
  instagram: `${base}Icons/Instagram.png`,
  tiktok: `${base}Icons/Tiktok.png`,
  github: `${base}Icons/Github.png`,
  facebook: `${base}Icons/Facebook.png`,
};


---

<a href={link} target="_blank" rel="noopener noreferrer">
  <img src={iconPaths[icon]} width="25" height="25" alt={icon} />
</a>
