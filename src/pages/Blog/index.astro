---
import Layout from '../../layouts/Layout.astro'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

const allPosts = await getCollection('posts', ({ data }: { data: Record<string, any> }) => data.draft !== true)
const sortedPosts = allPosts.sort((a: CollectionEntry<'posts'>, b: CollectionEntry<'posts'>) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
const postsPerPage = 5
const totalPosts = sortedPosts.length
const totalPages = Math.ceil(totalPosts / postsPerPage)

// Configuración de paginación
const currentPage = 1
const startIndex = (currentPage - 1) * postsPerPage
const endIndex = startIndex + postsPerPage
const posts = sortedPosts.slice(startIndex, endIndex)

function formatDate(date: Date) {
  return date.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' })
}

// Función para generar botones de paginación
function getPaginationButtons(currentPage: number, totalPages: number) {
  const buttons = []
  const maxButtons = Math.min(5, totalPages)
  let startPage = 1
  
  if (totalPages > 5) {
    if (currentPage > 3) {
      startPage = Math.min(currentPage - 2, totalPages - 4)
    }
  }
  
  for (let i = 0; i < maxButtons; i++) {
    const pageNum = startPage + i
    if (pageNum > totalPages) break
    buttons.push(pageNum)
  }
  
  return buttons
}

const paginationButtons = getPaginationButtons(currentPage, totalPages)
---

<Layout title="Blog">
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8">
      <!-- Header simple -->
      <header class="mb-16 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-gray-900">
          Blog
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Descubre artículos sobre desarrollo, tecnología y más
        </p>
        
        <!-- Stats del blog -->
        <div class="mt-8 flex flex-wrap justify-center gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">{totalPosts}</div>
            <div class="text-sm text-gray-500">Artículos</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600">{totalPages}</div>
            <div class="text-sm text-gray-500">Páginas</div>
          </div>
        </div>
      </header>

      <!-- Grid de artículos mejorado -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mb-16">
        {posts.map((post, index) => (
          <article 
            class="group relative bg-white rounded-2xl overflow-hidden border border-gray-200 hover:border-blue-300 transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
          >
            <a href={`${import.meta.env.BASE_URL}Blog/${post.slug}/`} class="block">
              {post.data.image?.url && (
                <div class="aspect-video overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
                  <img 
                    src={post.data.image.url} 
                    alt={post.data.image.alt || post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              )}

              <div class="p-6">
                {/* Tags */}
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.slice(0, 2).map((tag: string) => (
                      <span class="text-xs bg-blue-50 text-blue-700 px-3 py-1 rounded-full font-medium">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}

                <h2 class="text-xl font-bold mb-3 text-gray-900 group-hover:text-blue-600 transition-colors duration-300 line-clamp-2">
                  {post.data.title}
                </h2>
                
                <p class="text-gray-600 text-sm mb-4 line-clamp-3 leading-relaxed">
                  {post.data.description}
                </p>

                {/* Metadata */}
                <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                  <div class="flex items-center gap-3">
                    <div class="text-xs font-medium text-gray-900">{post.data.author || 'Anónimo'}</div>
                  </div>
                  
                  <time 
                    datetime={post.data.pubDate.toISOString()}
                    class="text-xs text-gray-500"
                  >
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      <!-- Paginación numérica -->
      {totalPages > 1 && (
        <div class="mt-12">
          <div class="text-center mb-4">
            <p class="text-sm text-gray-500">
              Página {currentPage} de {totalPages}
            </p>
          </div>
          
          <nav class="flex items-center justify-center space-x-2" aria-label="Paginación">
            {currentPage > 1 && (
              <a 
                href={`${import.meta.env.BASE_URL}/Blog/`}
                class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-50 text-gray-700"
              >
                Primera
              </a>
            )}
            
            <div class="flex items-center space-x-1">
              {paginationButtons.map(pageNum => {
                const isActive = currentPage === pageNum
                const href = pageNum === 1 
                  ? `${import.meta.env.BASE_URL}Blog` 
                  : `${import.meta.env.BASE_URL}Blog/page/${pageNum}`
                
                return (
                  <a
                    href={href}
                    class={`px-4 py-2 rounded ${
                      isActive
                        ? 'bg-blue-600 text-white'
                        : 'border border-gray-300 hover:bg-gray-50 text-gray-700'
                    }`}
                  >
                    {pageNum}
                  </a>
                )
              })}
            </div>

            {currentPage < totalPages && (
              <a 
                href={`${import.meta.env.BASE_URL}Blog/page/${totalPages}/`}
                class="px-4 py-2 border border-gray-300 rounded hover:bg-gray-50 text-gray-700"
              >
                Última
              </a>
            )}
          </nav>
          
          {/* Enlace simple para ver más */}
          {totalPages > 1 && (
            <div class="text-center mt-8 pt-6 border-t border-gray-200">
              <a 
                href={`${import.meta.env.BASE_URL}Blog/page/2/`} 
                class="text-blue-600 hover:text-blue-700 font-medium underline decoration-2 underline-offset-4 hover:decoration-blue-700 transition-colors"
              >
                Ver más entradas
              </a>
            </div>
          )}
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 { 
    display: -webkit-box; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
  }
  .line-clamp-3 { 
    display: -webkit-box; 
    -webkit-line-clamp: 3; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
  }
</style>