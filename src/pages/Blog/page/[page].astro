---
// src/pages/Blog/page/[page].astro
import Layout from '../../../layouts/Layout.astro'
import { getCollection } from 'astro:content'

// Esto es REQUERIDO para rutas dinámicas
export async function getStaticPaths() {
  const allPosts = await getCollection('posts', ({ data }) => data.draft !== true)
  const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  
  const postsPerPage = 5
  const totalPosts = sortedPosts.length
  const totalPages = Math.ceil(totalPosts / postsPerPage)
  
  // Generar todas las páginas
  const paths = []
  for (let i = 1; i <= totalPages; i++) {
    paths.push({
      params: { page: i.toString() }
    })
  }
  
  return paths
}

const page = Number(Astro.params.page)
const postsPerPage = 5

const allPosts = await getCollection('posts', ({ data }) => data.draft !== true)
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
const totalPosts = sortedPosts.length
const totalPages = Math.ceil(totalPosts / postsPerPage)

// Validar página
if (page < 1 || page > totalPages) {
  return Astro.redirect('/404')
}

const startIndex = (page - 1) * postsPerPage
const endIndex = startIndex + postsPerPage
const posts = sortedPosts.slice(startIndex, endIndex)

function formatDate(date: Date) {
  return date.toLocaleDateString('es-MX', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  })
}

// Calcular qué páginas mostrar (mover la lógica fuera del JSX)
function getPagesToShow(currentPage: number, totalPages: number, maxPagesToShow: number = 5) {
  const pagesToShow = []
  
  if (totalPages <= maxPagesToShow) {
    // Mostrar todas las páginas
    for (let i = 1; i <= totalPages; i++) {
      pagesToShow.push(i)
    }
  } else {
    // Mostrar páginas alrededor de la página actual
    let start = Math.max(1, currentPage - 2)
    let end = Math.min(totalPages, start + maxPagesToShow - 1)
    
    // Ajustar si estamos cerca del final
    if (end === totalPages) {
      start = totalPages - maxPagesToShow + 1
    }
    
    for (let i = start; i <= end; i++) {
      pagesToShow.push(i)
    }
  }
  
  return pagesToShow
}

const pagesToShow = getPagesToShow(page, totalPages)
---

<Layout title={`Blog - Página ${page}`}>
  <div class="min-h-screen bg-transparent">
    <div class="mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8">
      <header class="mb-16 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-white">Blog</h1>
        <p class="text-lg text-gray-400">Página {page} de {totalPages}</p>
      </header>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 mb-12">
        {posts.map(post => (
          <article class="group relative bg-gray-900/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-gray-800 hover:border-blue-500/50 hover:shadow-xl hover:shadow-blue-500/10 hover:-translate-y-1 transition-all duration-300">
            <a href={`${import.meta.env.BASE_URL}Blog/${post.slug}/`} class="block">
              {post.data.image?.url && (
                <div class="aspect-video overflow-hidden bg-gray-800">
                  <img 
                    src={post.data.image.url} 
                    alt={post.data.image.alt || post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}

              <div class="p-6">
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.slice(0,2).map((tag: string) => (
                      <span class="text-xs bg-blue-900/30 text-blue-300 px-2.5 py-1 rounded-full font-medium">
                        #{tag}
                      </span>
                    ))}
                  </div>
                )}

                <h2 class="text-xl font-bold mb-2 text-white group-hover:text-blue-400 transition-colors line-clamp-2">
                  {post.data.title}
                </h2>
                <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                  {post.data.description}
                </p>

                <div class="flex items-center justify-between text-xs text-gray-500 pt-4 border-t border-gray-800">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  <span class="font-medium text-blue-400">Leer más</span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      <!-- Paginación mejorada - Tema oscuro -->
      {totalPages > 1 && (
        <div class="mt-16">
          <nav class="flex flex-col items-center gap-6" aria-label="Paginación">
            <div class="flex items-center justify-center space-x-1">
              {/* Botón Anterior */}
              {page > 1 && (
                <a 
                  href={page === 2 ? `${import.meta.env.BASE_URL}Blog/` : `${import.meta.env.BASE_URL}Blog/page/${page - 1}/`}
                  class="flex items-center justify-center px-4 py-3 glass-light rounded-l-lg hover:bg-gray-800/60 text-gray-300 hover:text-white transition-all duration-200 hover-glow"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  Anterior
                </a>
              )}

              {/* Números de página */}
              <div class="flex items-center space-x-1">
                {pagesToShow.map(pageNum => {
                  const isActive = page === pageNum
                  const href = pageNum === 1 ? 
                    `${import.meta.env.BASE_URL}Blog/` : 
                    `${import.meta.env.BASE_URL}Blog/page/${pageNum}/`
                  
                  return (
                    <a
                      href={href}
                      class={`flex items-center justify-center w-10 h-10 rounded transition-all duration-200 ${
                        isActive
                          ? 'bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg shadow-blue-500/30 transform scale-105'
                          : 'glass-light text-gray-300 hover:bg-gray-800/60 hover:text-white hover-glow'
                      }`}
                      aria-current={isActive ? "page" : undefined}
                    >
                      {pageNum}
                    </a>
                  )
                })}
              </div>

              {/* Botón Siguiente */}
              {page < totalPages && (
                <a 
                  href={`${import.meta.env.BASE_URL}Blog/page/${page + 1}/`}
                  class="flex items-center justify-center px-4 py-3 glass-light rounded-r-lg hover:bg-gray-800/60 text-gray-300 hover:text-white transition-all duration-200 hover-glow"
                >
                  Siguiente
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              )}
            </div>

            {/* Indicador de página */}
            <div class="flex items-center space-x-3">
              <span class="text-sm text-gray-400">
                Página <span class="font-semibold text-white">{page}</span> de <span class="font-semibold text-white">{totalPages}</span>
              </span>
              
              {/* Saltar a página input */}
              <div class="hidden sm:flex items-center space-x-2">
                <span class="text-sm text-gray-400">Ir a:</span>
                <div class="relative">
                  <select 
                    onchange="if(this.value) window.location.href=this.value"
                    class="appearance-none glass-light text-gray-300 rounded-md pl-3 pr-8 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  >
                    <option value="" disabled selected class="bg-gray-900">Seleccionar</option>
                    {Array.from({ length: totalPages }, (_, i) => i + 1).map(num => (
                      <option value={num === 1 ? `${import.meta.env.BASE_URL}Blog/` : `${import.meta.env.BASE_URL}Blog/page/${num}/`} class="bg-gray-900">
                        {num}
                      </option>
                    ))}
                  </select>
                  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </nav>
          
          {/* Enlace para volver al inicio */}
          <div class="text-center mt-10 pt-8 border-t border-gray-800">
            <a href={`${import.meta.env.BASE_URL}Blog/`} 
               class="inline-flex items-center text-blue-400 hover:text-blue-300 font-medium group transition-colors">
              <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Volver al inicio del blog
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 { 
    display: -webkit-box; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
  }
  .line-clamp-3 { 
    display: -webkit-box; 
    -webkit-line-clamp: 3; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
  }
  .glass-light {
    background: rgba(39, 39, 42, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  .hover-glow {
    transition: all 0.3s ease;
  }
  .hover-glow:hover {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
  }
</style>