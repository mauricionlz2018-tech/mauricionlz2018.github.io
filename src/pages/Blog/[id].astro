---
import Layout from '../../layouts/Layout.astro'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export const getStaticPaths = (async () => {
  const posts = await getCollection('posts')
  return posts.map((post) => ({ params: { id: post.slug }, props: { post } }))
})

const { post } = Astro.props
const { Content } = await post.render()

// Obtener todos los posts para navegación
const allPosts = await getCollection('posts', ({ data }) => data.draft !== true)
const sortedPosts = allPosts.sort((a: CollectionEntry<'posts'>, b: CollectionEntry<'posts'>) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
)

// Encontrar el índice del post actual
const currentIndex = sortedPosts.findIndex(p => p.slug === post.slug)
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null
---

<Layout title={post.data.title}>
  <article class="mx-auto max-w-5xl py-8 px-4">
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">{post.data.title}</h1>
      <div class="flex flex-col sm:flex-row sm:items-center gap-4 text-sm text-gray-600 border-b border-gray-200 pb-4">
        <span class="font-medium">{post.data.author}</span>
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </div>
    </header>

    {post.data.tags && post.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-8">
        {post.data.tags.map((tag: string) => (
          <a href={`${import.meta.env.BASE_URL}Blog/tags/${tag}`} class="text-xs bg-blue-50 text-blue-700 px-3 py-1.5 rounded-full font-medium hover:bg-blue-100 transition-colors">
            #{tag}
          </a>
        ))}
      </div>
    )}

    {post.data.image?.url && (
      <div class="aspect-video overflow-hidden rounded-xl mb-8 bg-gray-100">
        <img src={post.data.image.url} alt={post.data.image.alt || post.data.title} class="w-full h-full object-cover" />
      </div>
    )}

    <section class="prose prose-lg max-w-none mb-12">
      <Content />
    </section>

    <!-- Navegación entre posts -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4 text-gray-900">Más artículos</h3>
        <div class="flex flex-wrap gap-3">
          {sortedPosts.slice(0, 6).map(otherPost => {
            if (otherPost.slug === post.slug) return null
            return (
              <a 
                href={`${import.meta.env.BASE_URL}Blog/${otherPost.slug}`}
                class={`px-4 py-2 rounded-lg border text-sm font-medium transition-colors ${
                  otherPost.slug === post.slug
                    ? 'bg-blue-600 text-white border-blue-600'
                    : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50 hover:border-gray-400'
                }`}
              >
                {otherPost.data.title}
              </a>
            )
          })}
        </div>
      </div>

      <div class="flex flex-col sm:flex-row justify-between gap-4">
        <div>
          {prevPost && (
            <a 
              href={`${import.meta.env.BASE_URL}Blog/${prevPost.slug}`} 
              class="group flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium"
            >
              <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              <span>Anterior: {prevPost.data.title}</span>
            </a>
          )}
        </div>
        
        <div class="text-center">
          <a href={`${import.meta.env.BASE_URL}Blog`} class="text-blue-600 hover:text-blue-700 font-medium underline decoration-2 underline-offset-4">
            Volver al blog
          </a>
        </div>
        
        <div class="text-right">
          {nextPost && (
            <a 
              href={`${import.meta.env.BASE_URL}Blog/${nextPost.slug}`} 
              class="group flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium"
            >
              <span>Siguiente: {nextPost.data.title}</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </article>
</Layout>