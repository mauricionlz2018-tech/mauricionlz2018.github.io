---
import Layout from '../../layouts/Layout.astro'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export const getStaticPaths = (async () => {
  const posts = await getCollection('posts')
  return posts.map((post) => ({ params: { id: post.slug }, props: { post } }))
})

const { post } = Astro.props
const { Content } = await post.render()

// Obtener todos los posts para navegación
const allPosts = await getCollection('posts', ({ data }) => data.draft !== true)
const sortedPosts = allPosts.sort((a: CollectionEntry<'posts'>, b: CollectionEntry<'posts'>) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
)

// Encontrar el índice del post actual
const currentIndex = sortedPosts.findIndex(p => p.slug === post.slug)
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null
---

<Layout title={post.data.title}>
  <article class="mx-auto max-w-5xl py-8 px-4">
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-white">{post.data.title}</h1>
      <div class="flex flex-col sm:flex-row sm:items-center gap-4 text-sm text-gray-400 border-b border-gray-800 pb-4">
        <span class="font-medium">{post.data.author}</span>
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </div>
    </header>

    {post.data.tags && post.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-8">
        {post.data.tags.map((tag: string) => (
          <span class="text-xs bg-blue-900/30 text-blue-300 px-3 py-1.5 rounded-full font-medium">
            #{tag}
          </span>
        ))}
      </div>
    )}

    {post.data.image?.url && (
      <div class="aspect-video overflow-hidden rounded-xl mb-8 bg-gray-800">
        <img src={post.data.image.url} alt={post.data.image.alt || post.data.title} class="w-full h-full object-cover" />
      </div>
    )}

    <section class="prose prose-lg max-w-none mb-12 prose-headings:text-white prose-p:text-gray-300 prose-strong:text-white prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline prose-blockquote:text-gray-400 prose-blockquote:border-gray-700 prose-ul:text-gray-300 prose-ol:text-gray-300 prose-li:text-gray-300 prose-hr:border-gray-800">
      <Content />
    </section>

    <div class="mt-16 pt-10 border-t border-gray-800">
      <div class="mb-10">
        <h3 class="text-xl font-bold mb-6 text-white flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          Más artículos que te pueden interesar
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {sortedPosts.slice(0, 6).map(otherPost => {
            if (otherPost.slug === post.slug) return null
            return (
              <a 
                href={`${import.meta.env.BASE_URL}Blog/${otherPost.slug}/`}
                class="group glass-light rounded-xl p-4 hover:bg-gray-800/40 hover:border-blue-500/30 border border-gray-700 hover:shadow-lg hover:shadow-blue-500/10 transition-all duration-200"
              >
                <h4 class="font-semibold text-gray-200 group-hover:text-white transition-colors line-clamp-2 mb-2">
                  {otherPost.data.title}
                </h4>
                <div class="flex items-center justify-between text-xs text-gray-400">
                  <time datetime={otherPost.data.pubDate.toISOString()}>
                    {otherPost.data.pubDate.toLocaleDateString('es-MX', { month: 'short', day: 'numeric' })}
                  </time>
                  <span class="text-blue-400 font-medium group-hover:underline">
                    Leer →
                  </span>
                </div>
              </a>
            )
          })}
        </div>
      </div>

      <div class="flex flex-col sm:flex-row justify-between items-center gap-6 glass-dark rounded-2xl p-6">
        <div class="flex-1">
          {prevPost && (
            <a 
              href={`${import.meta.env.BASE_URL}Blog/${prevPost.slug}/`} 
              class="group flex items-center text-blue-400 hover:text-blue-300 font-medium"
            >
              <div class="mr-4 p-2 bg-gray-800 rounded-full shadow-sm group-hover:shadow-md group-hover:shadow-blue-500/10 transition-shadow">
                <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </div>
              <div class="text-left">
                <span class="text-sm text-gray-400 block">Artículo anterior</span>
                <span class="line-clamp-1 text-gray-200">{prevPost.data.title}</span>
              </div>
            </a>
          )}
        </div>
        
        <div class="text-center">
          <a href={`${import.meta.env.BASE_URL}Blog/`} 
             class="inline-flex items-center px-5 py-2.5 glass-light text-gray-200 font-medium rounded-lg hover:bg-gray-800/60 hover:text-white shadow-sm hover:shadow transition-all"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Volver al blog
          </a>
        </div>
        
        <div class="flex-1 text-right">
          {nextPost && (
            <a 
              href={`${import.meta.env.BASE_URL}Blog/${nextPost.slug}/`} 
              class="group flex items-center justify-end text-blue-400 hover:text-blue-300 font-medium"
            >
              <div class="text-right mr-4">
                <span class="text-sm text-gray-400 block">Siguiente artículo</span>
                <span class="line-clamp-1 text-gray-200">{nextPost.data.title}</span>
              </div>
              <div class="p-2 bg-gray-800 rounded-full shadow-sm group-hover:shadow-md group-hover:shadow-blue-500/10 transition-shadow">
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          )}
        </div>
      </div>
    </div>
  </article>
</Layout>


<style>
  .glass-dark {
    background: rgba(24, 24, 27, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .glass-light {
    background: rgba(39, 39, 42, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
  .line-clamp-1 { 
    display: -webkit-box; 
    -webkit-line-clamp: 1; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
  }
  .line-clamp-2 { 
    display: -webkit-box; 
    -webkit-line-clamp: 2; 
    -webkit-box-orient: vertical; 
    overflow: hidden;
  }
</style>